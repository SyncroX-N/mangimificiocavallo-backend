{
  "name": "trotter-backend",
  "main": "./src/server.ts",
  "types": "./src/types.ts",
  "exports": {
    ".": "./src/server.ts",
    "./types": "./src/types.ts"
  },
  "scripts": {
    "dev": "docker compose up -d db && bun run --hot src/server.ts",
    "build": "bunx tsc --build",
    "type-check": "bunx tsc --noEmit",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d db",
    "db:generate": "bunx -b drizzle-kit generate",
    "db:migrate": "bun run -b src/db/migrate.ts",
    "db:seed": "bun run -b src/db/seed/index.ts",
    "db:push": "bunx -b drizzle-kit push",
    "db:studio": "bunx -b drizzle-kit studio",
    "db:auth-generate": "bunx --bun @better-auth/cli generate",
    "lint": "bunx ultracite fix",
    "prepare": "lefthook install",
    "check": "ultracite check",
    "fix": "ultracite fix"
  },
  "dependencies": {
    "@better-auth/expo": "^1.4.1",
    "@hono/sentry": "^1.2.2",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-validator": "^0.7.5",
    "ai": "^3.3.16",
    "better-auth": "^1.4.3",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "hono": "4.10.6",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "zod": "^4.1.13",
    "zod-validation-error": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@faker-js/faker": "^10.1.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "husky": "^9.1.7",
    "lefthook": "^2.0.16",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.2",
    "ultracite": "7.1.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  }
}
