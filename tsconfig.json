{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "strictNullChecks": true,
    "types": ["bun-types"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "composite": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "auth.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "node_modules/**/*"]
}
